{
    "name": "roave/composer-git-gpg-verify",
    "description": "Composer plugin that verifies GPG signatures of downloaded dependencies, enforcing trusted GIT tags",
    "type": "composer-plugin",
    "license": "MIT",
    "authors": [
        {
            "name": "Marco Pivetta",
            "email": "ocramius@gmail.com"
        }
    ],
    "require": {
        "php":                 "^7.1.4",
        "composer-plugin-api": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit":   "^5.6",
        "humbug/humbug":     "dev-master",
        "phpstan/phpstan":   "^0.7",
        "composer/composer": "^1.3"
    },
    "autoload": {
        "psr-4": {
            "ComposerGpgVerify\\": "src/ComposerGpgVerify"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ComposerGpgVerifyTest\\": "test/ComposerGpgVerifyTest"
        }
    },
    "extra": {
        "class": "ComposerGpgVerify\\Verify",
        "branch-alias": {
            "dev-master": "2.0.x-dev"
        },
        "composer-gpg-verify": {
            "allow-unsigned": [
                "composer/ca-bundle",
                "composer/composer",
                "composer/semver",
                "composer/spdx-licenses",
                "psr/log",
                "justinrainbow/json-schema",
                "seld/cli-prompt",
                "seld/jsonlint",
                "seld/phar-utils",
                "symfony/console",
                "symfony/debug",
                "symfony/filesystem",
                "symfony/finder",
                "symfony/polyfill-mbstring",
                "symfony/process"
            ],
            "allow-untrusted": [
                "composer/ca-bundle",
                "composer/composer",
                "composer/semver",
                "composer/spdx-licenses",
                "psr/log",
                "justinrainbow/json-schema",
                "seld/cli-prompt",
                "seld/jsonlint",
                "seld/phar-utils",
                "symfony/console",
                "symfony/debug",
                "symfony/filesystem",
                "symfony/finder",
                "symfony/polyfill-mbstring",
                "symfony/process"
            ]
        }
    },
    "scripts": {
        "post-update-cmd":  "ComposerGpgVerify\\Verify::verify",
        "post-install-cmd": "ComposerGpgVerify\\Verify::verify"
    }
}
